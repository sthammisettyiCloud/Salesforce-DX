<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" controller="BCG_ButtonsController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds-card slds-card_boundary slds-theme_default">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <p>
                    <lightning:icon iconName="standard:report" size="small" alternativeText="report" title="Report" />
                </p> &nbsp; &nbsp;
                <h2 class="slds-card__header-title">
                    <span>BCG Buttons</span>
                </h2>
                <!--/div--> 
            </header>
        </div>
        <div class="slds-m-left_medium slds-m-top_x-small slds-m-bottom_x-small slds-border_bottom"> 
            <lightning:button label="BCG Home" onclick="{!c.callBCGHome}" /> 
        </div> 
        <div class="slds-m-left_medium slds-m-top_x-small slds-m-bottom_x-small"> 
            <lightning:button label="BCG Contact Us" onclick="{!c.callBCGContactUs}" /> 
        </div>
        <div class="slds-m-left_medium slds-m-top_x-small slds-m-bottom_x-small"> 
            <lightning:button label="BCG Student Reviews" onclick="{!c.loadStudentReviews}" /> 
        </div>
    </div>
    
</aura:component>