<apex:page standardController="Account">
    <apex:pageBlock >
         You are viewing the {!account.name} Account.
    </apex:pageBlock>
    <apex:pageBlock >
        <apex:pageBlockTable value="{!account.Contacts}" var="contact">
            <apex:column value="{!contact.Name}"/>
            <apex:column value="{!contact.Email}"/>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>