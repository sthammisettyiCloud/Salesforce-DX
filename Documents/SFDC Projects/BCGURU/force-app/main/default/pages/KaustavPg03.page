<apex:page standardController="Lead" extensions="Kaustav_First_Class">
    
    
    <apex:form >
        <apex:outputLabel >List of Queried Account Records:</apex:outputLabel>
        
    <apex:pageBlock >
        <apex:pageBlockTable value="{!accounts}" var="a">
            <apex:column value="{!a.Id}"/>
            <apex:column value="{!a.Name}"/>
            <apex:column value="{!a.AccountSource}"/>
            <apex:column value="{!a.Type}"/>
            <apex:column value="{!a.AnnualRevenue}"/>
         </apex:pageBlockTable>
     </apex:pageBlock>       
    </apex:form>
</apex:page>